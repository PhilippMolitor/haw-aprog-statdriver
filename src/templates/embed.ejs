<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Scoreboard - StatDriver</title>

    <style type="text/css">
        * {
        <% if(theme == 'light') { %> color: #000000;
            background-color: #ffffff;
        <% } else { %> color: #ffffff;
            background-color: #000000;
        <% } %>
        }
    </style>
</head>
<body>
<h1><%= title %></h1>
<% if(rank) { %>
    <p>
        Your rank is: <%= rank %>
    </p>
<% } %>
<ol>
    <% for (let entry of scores) { %>
        <li><%= entry.name %> - <%= entry.score %> - <%= new Date(entry.time * 1000) %></li>
    <% } %>
</ol>

</body>
</html>